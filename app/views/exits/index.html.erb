<p id="notice"><%= notice %></p>

<h1>Exits</h1>

<table>
  <thead>
    <tr>
      <th>Estoque</th>
      <th>Quantidade</th>
      <th>Data</th>
      <th>Comentário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exits.each do |exit| %>
      <tr>
        <td><%= exit.stock %></td>
        <td><%= exit.amount %></td>
        <td><%= exit.date %></td>
        <td><%= exit.comment %></td>
        <td><%= link_to 'Mostrar', exit %></td>
        <td><%= link_to 'Editar', edit_exit_path(exit) %></td>
        <td><%= link_to 'Apagar', exit, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Saída', new_exit_path %>
