<p id="notice"><%= notice %></p>

<h1>Funcionários</h1>

<table>
  <thead>
    <tr>
      <th>Código:</th>
      <th>Nome:</th>
      <th>Cargo:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.code %></td>
        <td><%= employee.name %></td>
        <td><%= employee.office_name %></td>
        <td><%= link_to 'Mostar', employee, :class => 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee), :class => 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Apagar', employee, :class => 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Funcionário', new_employee_path, :class => 'btn btn-primary btn-sm' %>
