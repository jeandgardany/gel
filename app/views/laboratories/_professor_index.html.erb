<p id="notice"><%= notice %></p>

<h1>Laboratórios</h1><br>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Capacidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td><%= laboratory.code %></td>
        <td><%= laboratory.name %></td>
        <td><%= laboratory.description %></td>
        <td><%= laboratory.capacity %></td>
        <td><%= link_to t('.new', :default => t("Mostrar")),
            laboratory, :class => 'btn btn-success btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Reservas', reserves_path, :class => 'btn btn-primary btn-sm' %>
