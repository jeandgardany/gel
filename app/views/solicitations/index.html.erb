<h1>Solicitations</h1>

<table>
  <thead>
    <tr>
      <th>Solicitante:</th>
      <th>Código:</th>
      <th>Cargo:</th>
      <th>Descrição:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitations.each do |solicitation| %>
      <tr>
        <td><%= solicitation.employee.name %></td>
        <td><%= solicitation.employee.code %></td>
        <td><%= solicitation.employee.office_name %></td>
        <td><%= solicitation.description %></td>
        <td><%= link_to 'Show', solicitation %></td>
        <td><%= link_to 'Edit', edit_solicitation_path(solicitation) %></td>
        <td><%= link_to 'Destroy', solicitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

