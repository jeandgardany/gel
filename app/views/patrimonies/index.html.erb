<p id="notice"><%= notice %></p>

<h1>Patrimonies</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Movement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patrimonies.each do |patrimony| %>
      <tr>
        <td><%= patrimony.tag %></td>
        <td><%= patrimony.movement %></td>
        <td><%= link_to 'Show', patrimony %></td>
        <td><%= link_to 'Edit', edit_patrimony_path(patrimony) %></td>
        <td><%= link_to 'Destroy', patrimony, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

