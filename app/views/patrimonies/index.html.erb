<p id="notice"><%= notice %></p>
<%= search_form_for(@q, format: :pdf) do |f| %>
<%= f.search_field :movement_action_cont, placeholder: "Ação..." %>
<%= f.search_field :tag_eq, placeholder: 'Pesquisar Etiqueta...' %>
<%= f.search_field :movement_product_name_cont, placeholder: 'Pesquisar Produto...' %>
<%= f.submit %>
<% end %>

<h1>Etiqueta de Patrimônio</h1>

<table>
  <thead>
    <tr>
      <th>Etiqueta: </th>
      <th>Produto: </th>
      <th>Ação: </th>
      <th>Validade: </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patrimonies.each do |patrimony| %>
      <tr>
        <td><%= patrimony.tag %></td>
        <td><%= patrimony.movement.product.name %></td>
        <td><%= patrimony.movement.action %></td>
        <td><%= patrimony.movement.shelfLife.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Mostrar', patrimony, :class => 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Editar', edit_patrimony_path(patrimony), :class => 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Apagar', patrimony, :class => 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @patrimonies %>
<br>
