<p id="notice"><%= notice %></p>

<p>
  <strong>Ação:</strong>
  <%= @stock.movement.action %>
</p>

<p>
  <strong>Laboratorio:</strong>
  <%= @stock.laboratory_id %>
</p>

<p>
  <strong>Product:</strong>
  <%= @stock.movement.product.name %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @stock.movement.amount %>
</p>

<p>
  <strong>Shelflife:</strong>
  <%= @stock.movement.shelfLife.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Lifecycle:</strong>
  <%= @stock.movement.lifeCycle %>
</p>

<p>
  <strong>Unitaryvalue:</strong>
  <%= valor_formatado(@stock.movement.unitaryValue) %>
</p>

<p>
  <strong>Value:</strong>
  <%= valor_formatado(@stock.movement.value) %>
</p>

<p>
  <strong>Data:</strong>
  <%= @stock.movement.data.strftime("%d/%m/%Y") %>
</p>

