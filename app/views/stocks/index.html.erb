<p id="notice"><%= notice %></p>

<h1>Estoque</h1>

<table>
  <thead>
    <tr>
      <th>Laboratório</th>
      <th>Produto</th>
      <th>Quantidade</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.laboratory %></td>
        <td><%= stock.product %></td>
        <td><%= stock.amount %></td>
        <td><%= link_to 'Mostrar', stock, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Editar', edit_stock_path(stock), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Apagar', stock, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Imprimir', stocks_path(format: :pdf), class: "btn btn-danger btn-sm" %>

