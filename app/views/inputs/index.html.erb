<p id="notice"><%= notice %></p>

<h1>Entradas</h1>

<table>
  <thead>
    <tr>
      <th>Laboratório</th>
      <th>Produto</th>
      <th>Validade</th>
      <th>Ciclo de Vida</th>
      <th>Quantidade</th>
      <th>Valor Und</th>
      <th>Valor Total</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inputs.each do |input| %>
      <tr>
        <td><%= input.laboratory.name %></td>
        <td><%= input.product.name %></td>
        <td><%= input.shelfLife %></td>
        <td><%= input.lifeCycle %></td>
        <td><%= input.amount %></td>
        <td><%= valor_formatado(input.unitaryValue) %></td>
        <td><%= valor_formatado(input.value) %></td>
        <td><%= input.date %></td>
        <td><%= link_to t('.new', :default => t("Mostrar")),
            input, :class => 'btn btn-success btn-sm' %></td>
        <td><%= link_to t('.edit', :default => t("Editar")),
            edit_input_path(input), :class => 'btn btn-warning btn-sm' %></td>
        <td><%= link_to t('.delete', :default => t("Apagar")),
          input, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_input_path, :class => 'btn btn-primary' %>
