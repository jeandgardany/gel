<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Descrição</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.description %></td>
        <td><%= product.provider %></td>
        <td><%= link_to 'Mostrar', product, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Apagar', product, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Imprimir', products_path(format: :pdf), class: "btn btn-danger btn-sm" %>
<%= link_to 'Novo Produto', new_product_path, class: "btn btn-primary btn-sm" %>
