<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Descrição</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.description %></td>
        <td><%= product.provider %></td>
      </tr>
    <% end %>
  </tbody>
</table>
